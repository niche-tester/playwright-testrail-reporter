{
  "name": "pw-simple-testrail-reporter",
  "version": "1.0.1",
  "description": "Report Playwright test results to TestRail",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "clean": "rimraf ./lib",
    "lint": "eslint -c ./eslintrc.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "jest",
    "test:playwright": "npx playwright test --config=./tests/playwright.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikoral/playwright-testrail-reporter.git"
  },
  "keywords": [
    "playwright",
    "testrail",
    "reporter",
    "reporter-testrail",
    "playwright-testrail"
  ],
  "author": "Ilhan Koral",
  "license": "MIT",
  "dependencies": {
    "@dlenroc/testrail": "^1.9.1",
    "@playwright/test": "^1.37.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/node": "^18.14.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "json-stringify-safe": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.37.0",
    "prettier": "^3.0.1",
    "rimraf": "^4.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
